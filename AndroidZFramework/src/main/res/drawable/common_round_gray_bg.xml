<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="1px">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="@color/gray_white"
                android:startColor="@color/gray_white" />

            <padding
                android:bottom="3dip"
                android:left="5dip"
                android:right="5dip"
                android:top="3dip" />

            <corners android:radius="4dip" />
        </shape>
    </item>

</layer-list>