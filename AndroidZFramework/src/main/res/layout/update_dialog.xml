<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dip"
    android:paddingRight="16dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="5dip" >

        <RelativeLayout
            android:id="@+id/rlayout_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:background="@drawable/update_dialog_title_bg" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:text="发现新版本,是否更新?"
                android:textColor="#2b2b2b"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/update_dialog_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@+id/title"
                android:text="V2.2.1"
                android:textColor="#f8601e"
                android:textSize="18dip" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/update_dialog_content_bg"
            android:orientation="vertical"
            android:paddingTop="4dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="更新内容:"
                android:textColor="#2b2b2b"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/updete_dialog_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="5dip"
                android:lineSpacingExtra="3dip"
                android:textColor="#2b2b2b"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/update_dialog_btn_bg"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/update_dialog_start_download"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/common_dialog_left_btn_bg_selector"
                    android:gravity="center"
                    android:text="后台更新"
                    android:textColor="#ffffff"
                    android:textSize="16dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/update_dialog_update_later_parent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.5dip"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/update_dialog_update_later"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/common_dialog_right_btn_bg_selector"
                    android:gravity="center"
                    android:text="以后再说"
                    android:textColor="#ffffff"
                    android:textSize="16dip" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>