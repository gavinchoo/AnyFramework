<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/data_empty_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/data_empty_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/data_empty_logo"
            android:clickable="true" />

        <TextView
            android:id="@+id/data_empty_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_empty_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="15dip"
            android:lineSpacingExtra="5dip"
            android:text="暂无预订订单"
            android:textSize="16dip"
            android:gravity="center"
            android:textColor="#6b6b6b" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_empty_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dip" >

            <TextView
                android:id="@+id/data_empty_refresh"
                android:layout_width="90dip"
                android:layout_height="35dip"
                android:background="@drawable/common_edittext_selector_1"
                android:gravity="center"
                android:textSize="14dip"
                android:text="再试一次"
                android:textColor="#6b6b6b" />

            <TextView
                android:id="@+id/data_empty_setting"
                android:layout_width="90dip"
                android:layout_height="35dip"
                android:layout_marginLeft="40dip"
                android:textSize="14dip"
                android:background="@drawable/common_edittext_selector_1"
                android:gravity="center"
                android:text="设置网络"
                android:textColor="#6b6b6b" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>